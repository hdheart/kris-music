
.content {
	padding: 20rpx;
}
.list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 0 30rpx;
	background: #fff;
	border-radius: 10rpx;
	margin-top: 20rpx;
	color: #333;
}
.list-title {
	font-size: 28rpx;
	line-height: 88rpx;
}
.list-pic {
	display: none;
	width: 28rpx;
	height: 28rpx;
}
.active {
	background: #169af3;
	color: #fff;
}
.active .list-pic {
	display: block;
}

